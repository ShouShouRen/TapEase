<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 選中項目的文字樣式（深色模式下白字） -->
    <style name="BottomNavigationView.ActiveItemTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 未選中項目的文字樣式（深色模式下灰字） -->
    <style name="BottomNavigationView.InactiveItemTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>
