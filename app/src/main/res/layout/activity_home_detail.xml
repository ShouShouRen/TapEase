<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClickDetailActivity">

    <!-- 主畫面 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:colorBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="點滴輕鬆"
                android:textColor="?android:textColorPrimary"
                android:textSize="32sp" />

            <!-- 可點擊的表情容器 -->
            <LinearLayout
                android:id="@+id/faceContainer"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/faceImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:contentDescription="表情圖片"
                    android:src="@drawable/baseline_tag_faces_24" />
            </LinearLayout>

            <!-- 今日點擊次數 -->
            <TextView
                android:id="@+id/releaseCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="今日已釋放 0 次"
                android:textColor="?android:textColorSecondary"
                android:textSize="20sp" />

            <!-- 能量條 -->
            <ProgressBar
                android:id="@+id/energyBar"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:max="100"
                android:progress="0" />

            <!-- Fever 模式倒數 -->
            <TextView
                android:id="@+id/feverCountdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:textColor="#FF4081"
                android:textSize="18sp"
                android:visibility="gone" />

            <!-- 返回按鈕 -->
            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:onClick="Onback"
                android:text="返回"
                style="@style/CustomButtonStyle" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 漂浮表情將動態加入 rootLayout 上層 -->

</FrameLayout>
